# /etc/mysql/mysql.d/50-distro-server.cnf: The global mysql configuration file.

# add a section [mysqld-8.0] for specific configurations
[mysqld]
# Using "mysql_native_password" for compatibility with Perl, PHP, Ruby...
loose-default-authentication-plugin		= mysql_native_password
character-set-server				= utf8mb4
user						= mysql
port						= 3306
socket						= /var/run/mysqld/mysqld.sock
pid-file					= /var/run/mysqld/mysql.pid
log-error					= /var/log/mysql/mysqld.err
basedir						= /usr
datadir						= /var/lib/mysql
skip-external-locking
lc_messages_dir					= /usr/share/mysql
#Set this to your desired error message language
lc_messages					= en_US

# security:
# using "localhost" in connects uses sockets by default
# skip-networking
bind-address					= 127.0.0.1

log-bin
server-id					= 1

# point the following paths to different dedicated disks
#tmpdir						= /tmp/
#log-update					= /path-to-dedicated-directory/hostname
